<div class="field form-group">
  <%= f.label :title , class: 'form-label' %>
  <%= f.text_field :title , class: 'form-control', required: true %>
</div>

<div class="field form-group">
  <%= f.label :'Start Date' , class: 'form-label' %>
  <%= f.date_select :start_date, {order: [:month, :year], prompt: { month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 30}, {required: true} %>
</div>

<div class="field form-group">
  <%= f.label :'End Date' , class: 'form-label' %>
  <%= f.date_select :end_date, {order: [:month, :year], prompt: {  month: 'Select month', year: 'Select year' }, start_year: Date.today.year, end_year: Date.today.year - 30}, {required: true} %>
</div>

<div class="field form-group" >
  <%= f.label :description , class: 'form-label' %>
  <%= f.text_area :description , class: 'form-control', maxlength: "500" %>
</div>

<div class="field form-group">
  <%= f.label :skills , class: 'form-label' %>
  <%= f.text_area :skills , class: 'form-control' %>
</div>
