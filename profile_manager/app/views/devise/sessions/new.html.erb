<div class='container'>
  <div class= "row ">
    <div class='col-sm-4 heading-login'>
		<p>K-Resume!</p>
    </div>
	</div>
  <div class='col-md-4 center-login'>
  <h2 class='login-h'>Log In</h2>

  <%= form_with model: resource, scope: resource_name, url: session_path(resource_name), validate: true, local: true do |f| %>
    <div class="field form-group fields">
      <%= f.label :email , class: 'form-label'%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>
    </div>

    <div class="field form-group fields">
      <%= f.label :password , class: "form-label"%><br />
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in" ,class: 'btn btn-lg login-btn' %>
    </div>
    <br>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
