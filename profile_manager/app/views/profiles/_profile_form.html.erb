<div class="field form-group">
  <%= f.label :first_name , class: 'form-label' %>
  <%= f.text_field :first_name , class: 'form-control', required: true %>
</div>

<div class="field form-group">
  <%= f.label :last_name , class: 'form-label' %>
  <%= f.text_field :last_name , class: 'form-control', required: true %>
</div>

<div class="field form-group" >
  <%= f.label :description , class: 'form-label' %>
  <%= f.text_area :description , class: 'form-control', maxlength: "500" %>
</div>

<div class="field form-group">
  <%= f.label :email , class: "form-label"%><br />
  <%= f.email_field :email , class: "form-control", :required => true %>
</div>

<div class="field form-group">
  <%= f.label :phone_number , class: "form-label"%><br />
  <%= f.telephone_field :phone_number, class: "form-control", :required => true %>
</div>

<div class="field form-group">
  <%= f.label :address , class: 'form-label' %>
  <%= f.text_area :address , class: 'form-control' %>
</div>

<div class="field form-group">
  <%= f.label :designation , class: "form-label"%><br />
  <%= f.text_field :designation, autofocus: true , class: "form-control", :required => true %>
</div>

<div class="field form-group">
  <%= f.label :skills , class: 'form-label' %>
  <%= f.text_area :skills , class: 'form-control' %>
</div>

<div class='field form-group'>
  <%= f.label :image , class: 'form-label' %> <br />
  <%= f.file_field :image , class: 'form-control', direct_upload: true, accept: ".png,.jpeg"  %>
</div>
